{
  "name": "Time Converter",
  "version": "1.0",
  "description": "Converts times to Local time",
  "manifest_version": 2,
  "page_action": {
    "default_title": "My first extension",
    "default_icon": {
      "16": "icons/time-zone-16.png",
      "32": "icons/time-zone-32.png",
      "64": "icons/time-zone-64.png",
      "128": "icons/time-zone-128.png"
    }
  },
  "background": {
    "scripts":["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "https://console.aws.amazon.com/"
  ],
  "icons": {
    "16": "icons/time-zone-16.png",
    "32": "icons/time-zone-32.png",
    "64": "icons/time-zone-64.png",
    "128": "icons/time-zone-128.png"
  }
}